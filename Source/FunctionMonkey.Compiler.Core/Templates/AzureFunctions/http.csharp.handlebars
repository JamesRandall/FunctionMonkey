                            sbError.Append(dex.LineNumber);
                            sbError.Append(" for path ");
                            sbError.Append(dex.Path);
                            return CreateBadParameterResponse(sbError.ToString());
                        }
                        else
                        {
                            return CreateBadParameterResponse(dex.Message);
                        }
